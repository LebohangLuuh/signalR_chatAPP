<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Chat Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body style="background-color : black;">
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: orange;" >
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Chat Application", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        @*<footer>
                <p>&copy; @DateTime.Now.Year - Chat Application</p>
            </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <!--Start Footer -->
    <footer style="background-color: green;" class="container-fluid text-center">
        <br>
        <p style="font-size:18px;color: white;">Find me on social media.</p>
        <a title="Linkedin" href="https://www.linkedin.com/in/lebohang-mofokeng-175b71183/" target="_blank"><i class="fa fa-linkedin Fcolor" style="font-size:30px;margin-right:5px;"></i></a>
        <a title="GitHub" href="https://github.com/LebohangLuuh/" target="_blank"><i class="fa fa-github Fcolor" style="font-size:30px;margin-right:5px;"></i></a>
        
        <br><br>
    </footer>
    <img src="" width="1" height="1" id="view" />
   <script src="~/Scripts/vistor.js"></script>
</body>
</html>
